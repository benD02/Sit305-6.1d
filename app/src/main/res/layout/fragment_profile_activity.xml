<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/background_colour"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello,"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/tv_user"
                android:textColor="@color/white"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user"
                android:textSize="40dp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_task_due"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/banner_background"
        android:padding="8dp"
        android:text="you have 0 tasks due"
        android:textStyle="bold"
        android:drawableStart="@drawable/baseline_notifications_24"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnRefreshQuizzes"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Refresh Quizzes"
        android:gravity="start|center_vertical"
        android:textColor="@color/white"
        app:icon="@drawable/baseline_refresh_24" />



    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_quiz_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Quiz" />





</LinearLayout>